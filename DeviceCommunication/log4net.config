<log4net>
	<root>
		<level value="ALL" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	<appender name="console" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionpattern value="%date{yyyy'-'MM'-'dd HH':'mm':'ss'.'fff} [%level] [%thread] %logger - %message%newline" />
		</layout>
	</appender>
	<appender name="file" type="log4net.Appender.RollingFileAppender">
		<file value="PLCCommunication.log" />
		<maxSizeRollBackups value="2" />
		<maximumFileSize value="5MB" />
		<rollingStyle value="Date" />
		<datePattern value=".yyyy-MM-dd" />
		<staticLogFileName value="false" />
		<preserveLogFileNameExtension value="true" />
		
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{yyyy'-'MM'-'dd HH':'mm':'ss'.'fff} [%level] ctf_I40_Gateway: [%thread] %logger [%property{NDC}] - %message%newline" />
		</layout>
	</appender>
</log4net>
